%h1
	= @sales_rep.full_name
	= link_to 'Edit', edit_sales_rep_path(@sales_rep.id), :class => 'btn btn-default btn-sm'
	= link_to 'Delete', @sales_rep, method: :delete, :class => 'btn btn-default btn-sm'
%p
	%strong= 'Sales Group:'
	- if @sales_rep.sales_group_id.nil?
		= 'None'
	- else
		= @sales_rep.sales_group_id.to_s
%p
	%strong= 'Location:'
	- if @sales_rep.location_id.nil?
		= 'None'
	- else
		= @sales_rep.location.name